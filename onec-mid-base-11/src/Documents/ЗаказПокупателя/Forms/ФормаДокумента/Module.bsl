&НаСервере
Процедура ДЗ1_ДобавитьПоляРеквизитов(); 
	
	
	//Добавление Элемента Контактное лицо
	НовыйЭлемент = Элементы.Добавить("КонтактноеЛицо", Тип("ПолеФормы"));
	НовыйЭлемент.ПутьКДанным = "Объект.ДЗ1_КонтактноеЛицо"; 
	НовыйЭлемент.Вид = ВидПоляФормы.ПолеВвода;
	НовыйЭлемент.Заголовок = "Контактное Лицо";  
	ЭтаФорма.Элементы.Переместить(НовыйЭлемент, ЭтаФорма.Элементы.ГруппаШапкаПраво, ЭтаФорма.Элементы.Контрагент);  
	
	//Добавление группы для элементов Согласованая скидки и кнопки пересчитать
	НоваяГруппа = ЭтаФорма.Элементы.Добавить("ГруппаСкидка", Тип("ГруппаФормы"),ЭтаФорма.Элементы.ГруппаШапкаЛево);
	НоваяГруппа.Вид = ВидГруппыФормы.ОбычнаяГруппа;
	НоваяГруппа.Отображение = ОтображениеОбычнойГруппы.Нет;
	НоваяГруппа.ОтображатьЗаголовок = Ложь;
	НоваяГруппа.Группировка = ГруппировкаПодчиненныхЭлементовФормы.ГоризонтальнаяВсегда;


	//Добавление Элемента СогласованаяСкидка в группу ГруппаСкидка
	НовыйЭлемент = Элементы.Добавить("СогласованнаяСкидка", Тип("ПолеФормы"),ЭтаФорма.Элементы.ГруппаСкидка);
	НовыйЭлемент.ПутьКДанным = "Объект.ДЗ1_СогласованнаяСкидка"; 
	НовыйЭлемент.Вид = ВидПоляФормы.ПолеВвода;
	НовыйЭлемент.Заголовок = "Согласованная Скидка";       
	НовыйЭлемент.УстановитьДействие("ПриИзменении", "ДЗ1_СогласованнаяСкидкаВопросПользователю");
	
	//Добавление Кнопки ПересчитатьТаблицу в группу ГруппаСкидка
	НовыйЭлемент = Команды.Добавить("ПересчитатьТаблицу");
	НовыйЭлемент.Заголовок = "ПересчитатьТаблицу";
	НовыйЭлемент.Действие  = "ДЗ1_ПересчитатьВсеТаблицы";
	НовыйЭлемент.Подсказка = "ПересчитатьТаблицу";  
	НовыйЭлемент.Картинка = БиблиотекаКартинок.Обновить; 
	НовыйЭлемент.Отображение = ОтображениеКнопки.КартинкаИТекст;	
	НовыйЭлемент = ЭтотОбъект.Элементы.Добавить("Пересчитать", Тип("КнопкаФормы"), ЭтаФорма.Элементы.ГруппаСкидка);
	НовыйЭлемент.ИмяКоманды = "ПересчитатьТаблицу";
	НовыйЭлемент.Вид = ВидКнопкиФормы.ОбычнаяКнопка;	
 
	
КонецПроцедуры
  

