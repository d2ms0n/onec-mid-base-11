&НаКлиенте
Процедура РассчитатьСуммуСтроки(ТекущиеДанные)
	
	
	//++ Вычисление применения скидки
	ОбщаяСкидка = ТекущиеДанные.Скидка + Объект.ДЗ1_СогласованнаяСкидка;
	Если ОбщаяСкидка > 100 Тогда  
		                                                           
		
	    ТипТовар = ПредопределенноеЗначение("Перечисление.ВидыНоменклатуры.Товар");
		ТипУслуга = ПредопределенноеЗначение("Перечисление.ВидыНоменклатуры.Услуга");
		ТипНоменклатуры = ДЗ1_ПолучитьТипНоменклатурыНаСервере (ТекущиеДанные.Номенклатура); 

		Сообщение = Новый СообщениеПользователю;
		Сообщение.Текст = СтрШаблон("Ошибка скидка в %1 на %2 превышает 100 процентов", ОбщаяСкидка, ТекущиеДанные.Номенклатура); 
		Строка = ТекущиеДанные.НомерСтроки - 1; 
		
		Если ТипНоменклатуры = ТипТовар Тогда
			Сообщение.Поле = "Объект.Товары["+Строка+"].Скидка"; 															 
		КонецЕсли;	
		
		Если ТипНоменклатуры = ТипУслуга Тогда
			Сообщение.Поле = "Объект.Услуги["+Строка+"].Скидка"; 															 
		КонецЕсли; 
		
		Сообщение.Сообщить();                                                 
		ТекущиеДанные.Сумма = 0; 
		                                                             
		Возврат;
	КонецЕсли; 

	КоэффициентСкидки = 1 - ОбщаяСкидка / 100;

	ТекущиеДанные.Сумма = ТекущиеДанные.Цена * ТекущиеДанные.Количество * КоэффициентСкидки;     
	
	РассчитатьСуммуДокумента(); 
	//--


	
КонецПроцедуры   

&НаСервереБезКонтекста
Функция ДЗ1_ПолучитьТипНоменклатурыНаСервере (Ссылка) 
	
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	Номенклатура.ВидНоменклатуры КАК ВидНоменклатуры
	|ИЗ
	|	Справочник.Номенклатура КАК Номенклатура
	|ГДЕ
	|	Номенклатура.Ссылка = &Ссылка";
	
	Запрос.УстановитьПараметр("Ссылка", Ссылка);
	РезультатЗапроса = Запрос.Выполнить();
	ВыборкаДетальныеЗаписи = РезультатЗапроса.Выбрать(); 
	ВыборкаДетальныеЗаписи.Следующий();
	
	Возврат ВыборкаДетальныеЗаписи.ВидНоменклатуры;
	
КонецФункции


